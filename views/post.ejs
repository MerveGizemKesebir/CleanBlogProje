
<!-- Head -->
<%- include('partials/_header') -%>


<body>

<!-- Navigation -->
<%- include('partials/_navigation') -%>


  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <h2 class="subheading"><%= post.detail %></h2>
            <span class="meta">Posted by
              <a href="#">Start Bootstrap</a>
              <%= post.dateCreated %></span>

          

       


         
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
      

             <!-- Update ve Delete ButonlarÄ± -->

             <div class="text-center">
              <a href="/posts/edit/<%= post._id %>" class="btn btn-success mb-4">Update</a>
             </div>
             <div class="text-center">
              <a href="/posts/<%= post._id %>?_method=DELETE" class="btn btn-danger"
                onclick="return confirm('Emin misiniz?')">Delete</a>
             </div>
    


         <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <p>
                  <%= post.detail %>
              </p>
  
        </div>
      </div>
    </div>
  </article>


<hr>

<!-- Footer -->
<%- include('partials/_footer') -%>

</body>
